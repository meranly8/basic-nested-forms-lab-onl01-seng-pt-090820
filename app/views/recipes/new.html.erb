<%= form_for(@recipe) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.fields_for :ingredients do |r| %>
        <%= r.label :name %>
        <%= r.text_field :name %><br>
        <%= r.label :quantity %>
        <%= r.text_field :quantity %><br>
    <% end %><br>
    <%= f.submit %>
<% end %>